{
  "name": "coffee-journal",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run sync-translations && ng serve",
    "build": "npm run sync-translations && ng build --configuration production",
    "watch": "npm run sync-translations && ng build --watch --configuration development",
    "test": "ng test",
    "sync-translations": "node scripts/sync-translations.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@nguniversal/express-engine": "^16.2.0",
    "@ngx-env/builder": "^20.1.1",
    "@supabase/supabase-js": "^2.75.0",
    "flag-icons": "^7.5.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.4",
    "@angular/cli": "^20.3.4",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/localize": "20.3.3",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
